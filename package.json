{
  "name": "dossh-assets-api",
  "version": "1.0.0",
  "description": "Fastify REST API for Dossh App",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "dev": "node --watch src/server.js",
    "build": "npm run build:clean && npm run build:copy",
    "build:clean": "rm -rf dist",
    "build:copy": "cp -r src dist",
    "build:prod": "npm run build && npm run start:prod",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "if [ \"$HUSKY\" != \"0\" ]; then husky; fi",
    "docker:build": "docker build -t app.api:local . ",
    "docker:run": "docker run -p 3000:3000 app.api:local",
    "docker:start": "npm run docker:build && npm run docker:run",
    "deploy:dev": "copilot deploy --env dev"
  },
  "keywords": [
    "fastify",
    "rest",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/env": "^4.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/sensible": "^5.6.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.1.0",
    "@sinclair/typebox": "^0.33.15",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  }
}
